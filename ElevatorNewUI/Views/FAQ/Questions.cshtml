@using DataLayer.DTO.FAQs


@model List<FAQDTO>


@{
    ViewData["Title"] = ViewBag.GroupTitle;
}


<div class="container-main">
    <div class="d-block">
        <div class="page-content page-row ">
            <div class="main-row bg-white mt-2 mb-2 ">

                <div class="accordion mt-30 mb-30 " id="accordionExample">

                    @foreach (FAQDTO item in Model)
                    {
                    <div class="card">
                        <div class="container">
                            <div class="card-header" id="heading@{@item.Id} ">
                                <h2 class="mb-0">
                                    <button class="btn btn-block text-right" type="button" data-toggle="collapse" data-target="#collapse@{@item.Id}" aria-expanded="true" aria-controls="collapse@{@item.Id}">
                                        @item.QuestionText
                                    </button>
                                </h2>
                            </div>

                            <div id="collapse@{@item.Id}" class="collapse border" aria-labelledby="heading" data-parent="#accordionExample">
                                <div class="card-body" style="padding-right:50px; font-size:13px">
                                    @item.AnswerText
                                </div>
                            </div>
                        </div>
                    </div>
                    }


                </div>

            </div>
        </div>
    </div>
</div>