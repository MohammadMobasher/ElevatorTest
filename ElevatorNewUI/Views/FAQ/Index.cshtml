@using DataLayer.DTO.FAQs

@model List<FaqGroupDTO>


@{
    ViewData["Title"] = "سوالات پرتکرار";
}


<style>

    .title-FaqGroup {
    }
</style>



<div class="container-main">
    <div class="d-block">
        <div class="page-content page-row ">
            <div class="main-row bg-white mt-2 mb-2 pl-5 pr-5">

                <div class="col-lg-12 col-md-12 col-xs-12 col-xl-12 text-center">

                    <div class="container">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-xl-2 col-xs-3"></div>
                            <div class="col-lg-8 col-md-8 col-xl-8 col-xs-2 ddd" style="background: url(../images/FAQ.jpg);
                        background-repeat: no-repeat;
                        background-size: 100% 100%;
                        height: 600px !important;
                        padding-top:280px">
                                @*<img src="~/images/FAQ.jpg" />*@
                                <form asp-action="Search" asp-controller="FAQ" method="get">
                                    <div class="container text-center">
                                        <div class="row">
                                            <div class="col-lg-8 col-md-8 col-sm-8">
                                                <input type="text" class="form-control" required="required" name="text" aria-describedby="text" placeholder="پرسش خود را جستجو کنید" />
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-sm-3">
                                                <input type="submit" class="btn btn-success" value="جستجو" style="height: 50px;" />
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-lg-2 col-md-2 col-xl-2 col-xs-3"></div>
                        </div>
                    </div>



                </div>

                <div class="col-lg-12 " >
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-xs-4 col-xl-2 border-bottom border-danger pt-3 pb-3">
                                <h5>دسته بندی سوالات</h5>
                            </div>
                            <div class="col-lg-10 col-md-10 col-xs-8 col-xl-10 border-bottom pb-10"></div>
                        </div>
                    </div>

                    <div class="container">
                        <div class="row">
                            @foreach (FaqGroupDTO item in Model)
                            {

                                <div class="col-lg-3 col-md-3 col-xl-3 col-xs-12 mt-2">
                                    <a href="/FAQ/Questions/@item.Id">
                                        <div class="card text-center">
                                            <i class="font-size-80 @item.Icon"  aria-hidden="true"></i>
                                            <div class="card-body">
                                                <h5 class="card-title">@item.Title</h5>
                                            </div>
                                        </div>
                                    </a>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>