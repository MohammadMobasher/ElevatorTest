@using DataLayer.Entities
@model List<LogoManufactory>

@using DNTPersianUtils.Core




@if (Model != null)
{
    <div class="col-lg-12 col-md-12 col-xs-12 pr order-1 d-block">
        <div class="slider-widget-products">
            <div class="widget widget-product card mb-0">
                <div class="product-carousel-brand owl-carousel owl-theme owl-rtl owl-loaded owl-drag">
                    <div class="owl-stage-outer">
                        <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s;">
                            @foreach (var item in Model)
                            {
                                <div class="owl-item active" style="margin-left: 10px; width: 250px;">
                                    <div class="item">
                                        <a href="@item.URL" class="d-block hover-img-link mt-0">
                                            <img asp-append-version="true" src="@("http://staffonly.ir/" + "" + item.AddressImg)" alt="@(item.Alt + ", آسانسور")" class="img-fluid img-brand" >
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="owl-nav">
                        <button type="button" role="presentation" class="owl-prev disabled">
                            <i class="fa fa-angle-right"></i>
                        </button>
                        <button type="button" role="presentation" class="owl-next">
                            <i class="fa fa-angle-left"></i>
                        </button>
                    </div>
                    <div class="owl-dots disabled"></div>
                </div>
            </div>
        </div>
    </div>
}