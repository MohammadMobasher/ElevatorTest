@using DataLayer.DTO
@model List<DataLayer.DTO.NewsDTO>
@using DNTPersianUtils.Core

@{
    ViewData["Title"] = "خبرنامه";
}



<main class="main-row mb-2 ">
    <div class="container-main">
        <div class="d-block">
            <div class="col-lg-10 col-md-9 col-xs-12 pr mt-3">
                <section class="content-widget">
                    @foreach (var item in Model)
                    {
                        <article class="post-item">
                            <div class="post-thumb">
                                <a href="/Blog/NewsDetail/@item.Id" class="d-block">
                                    <img src="@Url.Content( ViewBag.Url +"/" + item.ImageAddress)" alt="@item.Title">
                                </a>
                            </div>
                            <div class="post-content">
                                <div class="title">
                                    <a href="/Blog/NewsDetail/@item.Id">
                                        <h2 class="title-tag">@item.Title</h2>
                                    </a>
                                </div>
                                <div class="excerpt">@item.SummeryNews</div>
                                <span class="post-date">
                                    <i class="fa fa-calendar"></i>
                                    @item.Date.ToPersianDateTextify()
                                </span>
                            </div>
                        </article>
                    }

                </section>
            </div>


            <div class="col-lg-2 col-md-3 col-xs-12 pr mt-3 sticky-sidebar">
                <div class="shortcode-widget-area-sidebar">
                    <section class="widget-posts">
                        <div class="header-sidebar mb-3">
                            <h3>دسته‌ها</h3>
                        </div>
                        <div class="content-sidebar">
                            <div class="item">
                                <div class="item-inner">
                                    @foreach (NewsGroupDTO item in ViewBag.NewGroups)
                                    {
                                        <div class="title">
                                            <a href="#">
                                                <h2 class="title-tag">@item.Title</h2>
                                            </a>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>



            <div class="pagination-product pr-3 pl-3 pr">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">«</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link active" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">...</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">8</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">»</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</main>