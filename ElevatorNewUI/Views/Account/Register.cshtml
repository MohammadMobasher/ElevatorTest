
@{
    ViewData["Title"] = "ثبت نام";
    Layout = "~/Views/Shared/_Login.cshtml";

}


<style>
    .fullscreen-bg {
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        position: fixed;
        background-position: 70% 40%;
        background: url('/images/ElevatorBack2.jpg') no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        background-position: center;
        min-width: 100%;
        min-height: 100%;
    }

    html {
    }
</style>

<div class="fullscreen-bg">

</div>
<div class="container">
    <div class="row">
        <div class="col-lg">
            <section class="page-account-box">
                <div class="col-lg-6 col-md-6 col-xs-12 mx-auto">
                    <div class="ds-userlogin">
                        <a href="" class="account-box-logo">LiftBazar</a>
                        <div class="account-box">
                            <div class="account-box-headline">
                                <a href="Login" class="login-ds ">
                                    <span class="title">ورود</span>
                                    <span class="sub-title">به لیفت بازار</span>
                                </a>
                                <a href="Register" class="register-ds active">
                                    <span class="title">ثبت نام</span>
                                    <span class="sub-title">به لیفت بازار</span>
                                </a>
                            </div>
                            <div class="Login-to-account mt-4">
                                <div class="account-box-content">
                                    <h4>ثبت نام در لیفت بازار</h4>
                                    <form asp-action="Register" asp-controller="Account" class="form-account text-right">



                                        <div class="form-account-title">
                                            <label for="UserName">نام کاربری</label>
                                            <input type="text" placeholder="نام کاربری خود را وارد کنید" class="number-email-input" id="UserName" name="UserName">
                                        </div>

                                        <div class="form-account-title">
                                            <label for="Email">ایمیل</label>
                                            <input type="email" placeholder="پست الکترونیک  را وارد نمایید" class="number-email-input" id="Email" name="Email">
                                        </div>

                                        <div class="form-account-title">
                                            <label for="PhoneNumber">شماره موبایل</label>
                                            <input type="text" placeholder="شماره موبایل خود را وارد نمایید" class="number-email-input" id="PhoneNumber" name="PhoneNumber">
                                        </div>

                                        <div class="form-account-title">
                                            <label for="Password">کلمه عبور</label>
                                            <input type="password" placeholder="کلمه عبور خود را وارد نمایید" class="password-input" name="Password">
                                        </div>
                                        @*<div class="form-auth-row">
                                            <label for="#" class="ui-checkbox mt-1">
                                                <input type="checkbox" value="1" name="login" id="remember">
                                                <span class="ui-checkbox-check"></span>
                                            </label>
                                            <label for="remember" class="remember-me mr-0"><a href="#">حریم خصوصی</a> و <a href="#">شرایط قوانین </a>استفاده از سرویس های سایت دیجی‌اسمارت را مطالعه نموده و با کلیه موارد آن موافقم.</label>
                                        </div>*@
                                        <div class="form-row-account">
                                            <button class="btn btn-primary btn-register">ثبت نام در لیفت بازار</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
