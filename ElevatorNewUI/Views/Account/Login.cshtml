@model DataLayer.ViewModels.User.LoginViewModel

@{
    ViewData["Title"] = "ورود";
    Layout = "~/Views/Shared/_Login.cshtml";

}


<style>
    .fullscreen-bg {
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        position: fixed;
        background-position: 70% 40%;
        background: url('/images/ElevatorBack2.jpg') no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        background-position: center;
        min-width: 100%;
        min-height: 100%;
    }

    html {
    }
</style>

<div class="fullscreen-bg">

</div>
<div class="container">
    <div class="row">
        <div class="col-lg">
            <section class="page-account-box">
                <div class="col-lg-6 col-md-6 col-xs-12 mx-auto">
                    <div class="ds-userlogin">
                        <a href="/" class="account-box-logo">لیفت بازار</a>
                        <div class="account-box">
                            <div class="account-box-headline">
                                <a href="Login" class="login-ds active">
                                    <span class="title">ورود</span>
                                    <span class="sub-title">به لیفت بازار</span>
                                </a>
                                <a href="Register" class="register-ds">
                                    <span class="title">ثبت نام</span>
                                    <span class="sub-title">در لیفت بازار</span>
                                </a>
                            </div>
                            <div class="Login-to-account mt-4">
                                <div class="account-box-content">
                                    <h4>ورود به حساب کاربری</h4>
                                    <form asp-action="Login" asp-controller="Account" class="form-account text-right">
                                        <div class="form-account-title">
                                            <label for="UserName">نام کاربری / شماره موبایل</label>
                                            <input type="text" class="number-email-input" id="UserName" asp-for="UserName">
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                        <div class="form-account-title">
                                            <label for="Password">رمز عبور</label>
                                            <a href="/Account/ForgetPassword" class="account-link-password">رمز خود را فراموش کرده ام</a>
                                            <input type="password" class="password-input" asp-for="Password">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        @*<div class="form-account-title">

                                            <script src="https://www.google.com/recaptcha/api.js"></script>

                                           

                                            <script>
                                               function onSubmit(token) {
                                                 document.getElementById("demo-form").submit();
                                               }
                                            </script>

                                        </div>*@

                                        <div class="form-auth-row">
                                            <label for="#" class="ui-checkbox mt-1">
                                                <input type="checkbox" value="true" name="IsRemember" id="IsRemember">
                                                <span class="ui-checkbox-check"></span>
                                            </label>
                                            <label for="remember" class="remember-me mr-0">مرا به خاطر بسپار</label>
                                        </div>
                                        <div class="form-row-account">
                                            <button 

                                                    class="btn btn-primary btn-login">ورود به لیفت بازار</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
