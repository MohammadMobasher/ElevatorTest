@{
    ViewBag.Title = "ثبت کاربر جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form class="form-horizontal" asp-controller="UserManage" asp-action="CreateUser" method="post" style="" enctype="multipart/form-data">

    <div class="container">

        <div class="tab-content b-0 m-b-0">
            <!--- اظلاعات کاربران-->
            <div class="form-group">
                <label for="Title" class="control-label col-sm-2">نام کاربری <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input class="form-control" required="required" name="UserName" aria-describedby="Title" placeholder="نام کاربری" />
                </div>

            </div>

            <div class="form-group">
                <label for="Title" class="control-label col-sm-2">ایمیل <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input class="form-control" required="required" name="Email" aria-describedby="Title" placeholder="ایمیل" />
                </div>
            </div>

            <div class="form-group">
                <label for="Title" class="control-label col-sm-2">نام <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input class="form-control" required="required" name="FirstName" aria-describedby="Title" placeholder="نام" />
                </div>
            </div>


            <div class="form-group">
                <label for="Title" class="control-label col-sm-2">نام خانوادگی <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input class="form-control" required="required" name="LastName" aria-describedby="Title" placeholder="نام خانوادگی" />
                </div>
            </div>

        </div>

    </div>


    <div class="col-lg-12 ">
        <button type="submit" class="btn btn-block btn-success">ثبت</button>
        <a href="/UserManage/Index" class="btn btn-danger btn-block waves-effect waves-light">بازگشت</a>
    </div>
</form>
<style>
    textarea {
        resize: none
    }
</style>
