@using DataLayer.Entities.Users;
@model UserRoles
@{
    var roles = ViewBag.Roles as List<Roles>;
}
@{ 
    ViewBag.Title = "ثبت نقش جدید";
}
<style>
    ul {
        list-style-type: none;
    }
</style>
<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">

    <form asp-action="SetRole" method="post">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-box p-b-0">

                    <div class="row">
                        <div class="card-box">
                            <div class="form-group clearfix">
                                <label class="control-label col-md-2">نقش</label>
                                <div class="col-md-10">
                                    <select class="form-control" asp-for="RoleId" data-role="select2">
                                        <option>-- لطفا انتخاب کنید --</option>
                                        @foreach (var item in roles)
                                        {
                                            <option value="@item.Id">@item.RoleTitle</option>
                                        }
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="UserId" />
        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-block btn-primary ">ثبت</button>
            </div>
            <div class="col-md-6">
                <a class="btn btn-block btn-danger col-md-6" asp-action="Index">بازگشت</a>
            </div>
        </div>
    </form>
</div> <!-- container -->

