@using DataLayer.Entities.Users;
@model UserRoles
@{
    var roles = ViewBag.Roles as List<Roles>;
}

<style>
    ul {
        list-style-type: none;
    }
</style>

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">
            <form asp-action="SetRole" method="post">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card-box p-b-0">

                            <h4 class="header-title m-t-0 m-b-30">ثبت نقش جدید</h4>

                            <div class="row">
                                <div class="card-box">
                                    <div class="form-group clearfix">
                                        <label class="control-label col-md-2">نقش</label>
                                        <div class="col-md-10">
                                            <select class="form-control" asp-for="RoleId" data-role="select2">
                                                <option>-- لطفا انتخاب کنید --</option>
                                                @foreach (var item in roles)
                                                {
                                                    <option value="@item.Id">@item.RoleTitle</option>
                                                }
                                            </select>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="UserId" />
                <button type="submit" class="btn btn-success btn-sm btn-rounded w-md waves-effect waves-light m-b-5">ثبت </button>
                <a href='/UserManage/Index' class="btn btn-danger btn-sm btn-rounded w-md waves-effect waves-light m-b-5">بازگشت</a>
            </form>
        </div> <!-- container -->
        <div>

        </div>
    </div> <!-- content -->

</div>

