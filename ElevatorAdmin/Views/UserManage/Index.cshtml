@model IEnumerable<DataLayer.DTO.UserDTO.UsersManageDTO>

@{
    ViewBag.Title = "مدیریت کاربران";
}


<style>
    table, th, td {
        text-align: center;
    }
</style>


<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
    <TableBotton controller="UserManage" action="SendSmsToUsers"
                 @*isModal="true"
                 modalTitle="ارسال پیامک به تمامی کاربران" *@
                 title="ارسال پیامک به تمامی کاربران"
                 icon="fa-paper-plane"
                 buttonClass="btn-primary"></TableBotton>

    <span class="hidden" data-role-table-btn-area-access="">
        <TableBotton controller="UserManage" action="EditPassword"
                     isModal="true"
                     modalTitle="تغییر رمز عبور"
                     title="تغییر رمز عبور"
                     icon="fa-key"
                     buttonClass="btn-warning"></TableBotton>

        <TableBotton controller="UserManage" action="SetRole"
                     title="نقش"
                     icon="fa fa-users"
                     buttonClass="btn-primary"></TableBotton>


        <TableBotton controller="UserManage" action="SendSmsToUser"
                     isModal="true"
                     modalTitle="ارسال پیامک به کاربر"
                     title="ارسال پیامک به کاربر"
                     icon="fa-paper-plane"
                     buttonClass="btn-primary"></TableBotton>

    </span>
</div>

<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">

    <div class="editable-responsive">
        <table class="table table-responsive table-striped rounded table-hover table-bordered" id="datatable-editable">
            <thead>
                <tr>
                    <th width="3%"></th>
                    <th width="50px">
                        ردیف
                    </th>
                    <th>
                        نام کاربری
                    </th>
                    <th>
                        ایمیل
                    </th>
                    <th>
                        شماره تماس
                    </th>
                    <th>
                            تاریخ ثبت نام
                        </th>

                </tr>
            </thead>
            <tbody>
                @{ var raw = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox" data-role-table-checkbox="@item.Id"></td>
                        <td>@(raw++)</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.CreateDate</td>
                        

                        @*<a href='@Url.Action("SetRole", new {id = @item.Id})' class="btn btn-info btn-sm btn-rounded w-md waves-effect waves-light m-b-5">نقش</a>
                            <a href='@Url.Action("EditPassword", new {id = @item.Id})' class="btn btn-info btn-sm btn-rounded w-md waves-effect waves-light m-b-5">ویرایش رمز عبور</a>
                            <a href='@Url.Action("SendSmsToUser", new {id = @item.Id})' class="btn btn-info  btn-sm btn-rounded w-md waves-effect waves-light m-b-5">ارسال پیامک</a>
                            <a href='@Url.Action("UserChangeStatus", new {userId = @item.Id})' class="btn @(item.IsActive ?"btn-success":"btn-danger") btn-success btn-sm btn-rounded w-md waves-effect waves-light m-b-5">@(item.IsActive ? "فعال" : "غیرفعال")</a>*@



                    </tr>
                }
            </tbody>
        </table>

        @*@Html.Partial("~/Views/Shared/_Pagination.cshtml")*@
    </div>

    <!-- end: panel body -->
    @*<a href='/' class="btn btn-block btn-primary">بازگشت</a>*@

</div>

