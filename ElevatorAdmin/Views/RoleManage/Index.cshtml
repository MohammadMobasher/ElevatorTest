@model IEnumerable<DataLayer.DTO.UserDTO.RoleManageDTO>

@{
    ViewData["Title"] = "لیست نقش ها";
}

<style>
    table, th, td {
        text-align: center;
    }
</style>

<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
    @*<a href="/RoleManage/Create" class="btn btn-lg btn-primary" data-toggle="tooltip" title="ثبت" data-role="confirm">
            <i class="fa fa-plus btn-icon" aria-hidden="true"></i>&nbsp;&nbsp;
            ثبت
        </a>*@

    <TableBotton controller="RoleManage" action="Create"
                 title="ثبت"
                 icon="fa-plus"
                 buttonClass="btn-primary"></TableBotton>

    <span class="hidden" data-role-table-btn-area-access="">
        <TableBotton controller="RoleManage" action="Edit"
                     title="ویرایش"
                     icon="fa-pencil-square-o"
                     buttonClass="btn-warning"></TableBotton>

    </span>
</div>

<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
    <table class="table table-responsive table-striped rounded table-hover table-bordered ">
        <thead>
            <tr>
                <th width="3%"></th>
                <th width="50px">
                    ردیف
                </th>
                <th>
                    عنوان نقش
                </th>
                <th>
                    نقش
                </th>

            </tr>
        </thead>
        <tbody>
            @{ var raw = 1;}
            @foreach (var item in Model)
            {
            <tr>
                <td><input type="checkbox" data-role-table-checkbox="@item.Id"></td>
                <td>@(raw++)</td>
                <td>@item.RoleTitle</td>
                <td>@item.Name</td>
            </tr>
            }
        </tbody>
    </table>
</div>
