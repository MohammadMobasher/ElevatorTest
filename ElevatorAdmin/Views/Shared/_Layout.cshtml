<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <link rel="shortcut icon" href="~/Plugins/Template/images/favicon.ico">

    <title>ادمین - @ViewData["Title"]</title>

    <!--Morris Chart CSS -->
    <link rel="stylesheet" href="~/Plugins/morris/morris.css">

    <!-- App css -->
    <link href="~/UI/assets/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    @*<link href="~/UI/font-awesome/css/font-awesome.min.css" rel="stylesheet" />*@
    <link href="~/Plugins/Template/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Plugins/Template/css/core.css" rel="stylesheet" type="text/css" />
    <link href="~/Plugins/Template/css/components.css" rel="stylesheet" type="text/css" />
    <link href="~/Plugins/Template/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Plugins/Template/css/pages.css" rel="stylesheet" type="text/css" />
    <link href="~/Plugins/Template/css/menu.css" rel="stylesheet" type="text/css" />
    <link href="~/Plugins/Template/css/responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/Dropify/dropify.css" rel="stylesheet" />
    <link href="~/css/MStite.css" rel="stylesheet" />
    <link href="~/Plugins/bootstrap-tagsinput/css/bootstrap-tagsinput.css" rel="stylesheet" />

    <link href="~/lib/BootstrapPersianDateTimePicker/bootstrap.datetimepicker.style.css" rel="stylesheet" />
    <link href="~/Plugins/custombox/dist/custombox.min.css" rel="stylesheet">
    <!-- HTML5 Shiv and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <script src="~/Plugins/Template/js/modernizr.min.js"></script>
    <style>
        .vertical-center {
            margin-top: auto !important;
            margin-bottom: auto !important;
            vertical-align: middle !important;
        }

        .display-inherit {
            display: inherit
        }

        .input-group-prepend {
            display: -ms-flexbox;
            display: flex
        }
    </style>
</head>


<body class="fixed-left" style="overflow:hidden">
    
    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar Mtopbar" >

            <!-- LOGO -->
            <div class="topbar-left">
                <a href="/" class="logo"><span>لیفت<span> بازار </span></span><i class="zmdi zmdi-layers"></i></a>
            </div>

            <!-- Button mobile view to collapse sidebar menu -->
            <div class="navbar navbar-default " role="navigation">
                <div class="container">

                    <!-- Page title -->
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <button class="button-menu-mobile open-left">
                                <i class="zmdi zmdi-menu"></i>
                            </button>
                        </li>
                        <li>
                            <h4 class="page-title">داشبورد</h4>
                        </li>
                    </ul>

                    <!-- Right(Notification and Searchbox -->
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <!-- Notification -->
                            <div class="notification-box">
                                <ul class="list-inline m-b-0">
                                    <li>
                                        <a href="javascript:void(0);" class="right-bar-toggle">
                                            <i class="zmdi zmdi-notifications-none"></i>
                                        </a>
                                        <div class="noti-dot">
                                            <span class="dot"></span>
                                            <span class="pulse"></span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <!-- End Notification bar -->
                        </li>
                        <li class="hidden-xs">
                            <form role="search" class="app-search">
                                <input type="text" placeholder="به دنبال چه می گردی ؟؟؟"
                                       class="form-control">
                                <a href=""><i class="fa fa-search"></i></a>
                            </form>
                        </li>
                    </ul>

                </div><!-- end container -->
            </div><!-- end navbar -->
        </div>
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft" style="height:100% !important">

                <div id="sidebar-menu">
                    <ul>
                        <li class="text-muted menu-title">دسته بندی ها</li>
                        @await Component.InvokeAsync("SidebarComponent", new { controller = "Home", action = "Index", title = "صفحه اصلی" })
                        @await Component.InvokeAsync("SidebarComponent", new { controller = "UserManage", action = "Index", title = "مدیریت کاربران", icon = "zmdi-account-circle" })
                        @await Component.InvokeAsync("SidebarComponent", new { controller = "RoleManage", action = "Index", title = "مدیریت نقش ها", icon = "zmdi-settings" })

                    </ul>
                    <div class="clearfix"></div>
                </div>


            </div>

        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <script src="~/Plugins/Template/js/jquery.min.js"></script>
        <script src="~/lib/BootstrapPersianDateTimePicker/bootstrap.datetimepicker.js"></script>
        <script src="~/lib/Dropify/dropify.js"></script>
        <script src="~/Plugins/bootstrap-tagsinput/src/bootstrap-tagsinput.js"></script>
        <script src="~/Plugins/tinymce/jquery.tinymce.min.js"></script>

        <input type="hidden" name="selectedRowInTable" />

        @Html.Partial("_Message.cshtml")
        <div class="content-page " style="">
            <!-- Start content -->
            <div class="content Mcontent" style="margin-top:73px; overflow-y:auto">
                <div style="border-top:2.5px solid #3d871d; position:fixed; z-index:10000; width:100% !important"></div>
                <div class="container  " style=" background-color:#FFF;height:inherit">

                    @* Custome Modal For LiftBazar *@

                    <button href="#LiftBazarModal" class="hidden" data-animation="fadein" data-plugin="custommodal"
                            data-overlaySpeed="100" data-overlayColor="#36404a">
                        Rotate
                    </button>

                    <div id="LiftBazarModal" class="modal-demo">
                        <button data-toggle="tooltip" title="بستن" data-role="confirm" type="button" class="close" onclick="Custombox.close();">
                            <span>&times;</span><span class="sr-only">بستن</span>
                        </button>
                        <h4 name="LiftBazarModalTitle" class="custom-modal-title"></h4>
                        <div name="LiftBazarModalContent" class="custom-modal-text">
                        </div>
                    </div>
                    @* Custome Modal For LiftBazar *@

                    <div class="form-horizontal pageTitle ">
                        @ViewData["Title"]
                    </div>

                    @RenderBody()
                </div>
            </div>

            
        </div>



        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        <div class="side-bar right-bar">
            <a href="javascript:void(0);" class="right-bar-toggle">
                <i class="zmdi zmdi-close-circle-o"></i>
            </a>
            <h4 class="">اعلانات</h4>
            <div class="notification-list nicescroll">
                <ul class="list-group list-no-border user-list">
                    <li class="list-group-item">
                        <a href="#" class="user-list-item">
                            <div class="avatar">
                                <img src="~/Plugins/Template/images/users/avatar-2.jpg" alt="">
                            </div>
                            <div class="user-desc">
                                <span class="name">کاربر شماره یک</span>
                                <span class="desc">متن کاربر شماره یک</span>
                                <span class="time">2 ساعت قبل</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="#" class="user-list-item">
                            <div class="icon bg-info">
                                <i class="zmdi zmdi-account"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">ثبت نام جدید</span>
                                <span class="desc">کاربری جدید در سایت ثبت نام کرده است</span>
                                <span class="time">5 ساعت قبل</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="#" class="user-list-item">
                            <div class="icon bg-pink">
                                <i class="zmdi zmdi-comment"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">پیام جدید</span>
                                <span class="desc">متن پیام جدید از کاریی جدید</span>
                                <span class="time">1 روز قبل</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item active">
                        <a href="#" class="user-list-item">
                            <div class="avatar">
                                <img src="~/Plugins/Template/images/users/avatar-3.jpg" alt="">
                            </div>
                            <div class="user-desc">
                                <span class="name">کاربر شماره 2</span>
                                <span class="desc">با سلام من یک متن کاملا آزمایشی هستم</span>
                                <span class="time">2 روز قبل</span>
                            </div>
                        </a>
                    </li>
                    <li class="list-group-item active">
                        <a href="#" class="user-list-item">
                            <div class="icon bg-warning">
                                <i class="zmdi zmdi-settings"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">تنظیمات</span>
                                <span class="desc">تنظیمات جدید برای دسترسی و راحتی شما موجود است</span>
                                <span class="time">1 روز قبل</span>
                            </div>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
        <!-- /Right-bar -->
        <div id="panel-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content p-0 b-0">
                    <div class="panel panel-color panel-primary">
                        <div class="panel-heading">
                            <button type="button" class="close m-t-5" data-dismiss="modal" aria-hidden="true">×</button>
                            <h3 class="panel-title"></h3>
                        </div>
                        <div class="panel-body" id="panel-body">
                        </div>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div>
    </div>
    <!-- END wrapper -->



    <script>
        var resizefunc = [];
    </script>

    <!-- jQuery  -->

    <script src="~/Plugins/Template/js/bootstrap-rtl.min.js"></script>
    <script src="~/Plugins/Template/js/detect.js"></script>
    <script src="~/Plugins/Template/js/fastclick.js"></script>
    <script src="~/Plugins/Template/js/jquery.blockUI.js"></script>
    <script src="~/Plugins/Template/js/waves.js"></script>
    <script src="~/Plugins/Template/js/jquery.nicescroll.js"></script>
    <script src="~/Plugins/Template/js/jquery.slimscroll.js"></script>
    <script src="~/Plugins/Template/js/jquery.scrollTo.min.js"></script>
    <link href="~/Plugins/Template/css/core.css" rel="stylesheet" />
    <!-- KNOB JS -->
    <!--[if IE]>
    <script type="text/javascript" src="~/Plugins/jquery-knob/excanvas.js"></script>
    <![endif]-->
    <script src="~/Plugins/jquery-knob/jquery.knob.js"></script>

    <!--Morris Chart-->
    @*<script src="~/Plugins/morris/morris.min.js"></script>*@
    <script src="~/Plugins/raphael/raphael-min.js"></script>

    <!-- Dashboard init -->
    @*<script src="~/Plugins/Template/pages/jquery.dashboard.js"></script>*@

    <!-- App js -->
    <script src="~/Plugins/Template/js/jquery.core.js"></script>
    <script src="~/Plugins/Template/js/jquery.app.js"></script>

    <!-- Modal-Effect -->
    <script src="~/Plugins/custombox/dist/custombox.min.js"></script>
    <script src="~/Plugins/custombox/dist/legacy.min.js"></script>

    <script src="~/js/MSite.js"></script>

    @RenderSection("Script", false)

    <script>
        $(function () {

            $(".Mcontent").css({ "height": $(window).height() - $(".Mtopbar").height()+"px" });

        });
    </script>


</body>
</html>