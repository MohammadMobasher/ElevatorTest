@using DNTPersianUtils.Core
@using DataLayer.Entities
@using DataLayer.SSOT
@{
    ViewData["Title"] = "ثبت جدید";
    Layout = null;
}
@{
    var products = ViewBag.Products as List<Product>;
}



<form action="/Warehouse/ManageWarehouseProductCheck/Insert" class="form-horizontal" method="post" style="">

    <input name="WarehouseId" value="@ViewBag.Warehouse" type="hidden" />
    <div class="form-group">
        <label for="Title" class="control-label col-sm-2">محصول <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <select class="form-control" name="ProductId" data-role="select2">
                <option value=""> --- لطفا انتخاب کنید  ---</option>
                @foreach (var item in products)
                {
                    <option value="@item.Id">@item.Title</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="Title" class="control-label col-sm-2">ورودی / خروجی <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
           <select class="form-control" name="TypeSSOt" asp-items="@Html.GetEnumSelectList<WarehouseTypeSSOT>()">
                <option value=""> --- لطفا انتخاب کنید  ---</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="Title" class="control-label col-sm-2">تعداد <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" required="required" name="Count" aria-describedby="Title" placeholder="تعداد" min="0" />
        </div>
    </div>


    <button type="submit" class="btn btn-block btn-success">ثبت</button>


</form>





