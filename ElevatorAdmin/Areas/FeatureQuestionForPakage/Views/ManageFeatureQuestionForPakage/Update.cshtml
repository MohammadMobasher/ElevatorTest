@using DataLayer.DTO.Feature;
@using DataLayer.Entities.Features;
@using DataLayer.DTO;
@model FeatureQuestionForPakage

@{
    ViewData["Title"] = "ثبت گروه جدید";
    Layout = null;
    List<ProductGroupDTO> groups = ViewBag.Groups;
    List<FeatureIdTitleDTO> Features = ViewBag.Features;
}




<form action="/FeatureQuestionForPakage/ManageFeatureQuestionForPakage/Update" class="form-horizontal" method="post" style="">

    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="QuestionTitle" class="control-label col-sm-2">عنوان سوال <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <input type="text" value="@Model.QuestionTitle" class="form-control" required="required" name="QuestionTitle" aria-describedby="QuestionTitle" placeholder="عنوان سوال" />
        </div>
    </div>


    <div class="form-group">
        <label for="FeatureId" class="control-label col-sm-2">ویژگی <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <select name="FeatureId" required="required" class="form-control form-control-lg select2">
                <option>لطفا انتخاب کنید</option>
                @foreach (var item in Features)
                {
                    if (Model.FeatureId == item.Id)
                    {
                        <option value="@item.Id" selected>@item.Title</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                }
            </select>
        </div>
    </div>


    <div class="form-group">
        <label for="GroupId" class="control-label col-sm-2">گروه <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <select name="GroupId" required="required" class="form-control form-control-lg select2">
                <option>لطفا انتخاب کنید</option>
                @foreach (var item in groups)
                {
                    if (Model.GroupId == item.Id)
                    {
                        <option value="@item.Id" selected>@item.Title</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                }
            </select>
        </div>
    </div>



    <button type="submit" class="btn btn-block btn-success">ثبت</button>

    <script>
        jQuery(document).ready(function() {
            // Select2
                $(".select2").select2();

            });


    $('select:not(.normal)').each(function () {
                $(this).select2({
                    dropdownParent: $(this).parent()
                });
            });

    </script>
</form>





