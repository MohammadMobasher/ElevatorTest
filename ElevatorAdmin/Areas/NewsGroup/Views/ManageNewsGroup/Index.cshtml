@using DataLayer.DTO;
@model List<NewsGroupDTO>
@{
    ViewData["Title"] = "لیست دسته‌بندی اخبار‌ ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">


    <button data-role-href="/NewsGroup/ManageNewsGroup/Insert"
            
            class="btn btn-lg btn-primary data-role-table-btn" modal-title="ثبت جدید" ismodal="true" data-toggle="tooltip" title="ثبت" data-role="confirm">
        <i class="fa fa-plus btn-icon" aria-hidden="true"></i>&nbsp;&nbsp;
        ثبت
    </button>

    <span class="hidden" data-role-table-btn-area-access="">

        <button data-role-href="/NewsGroup/ManageNewsGroup/Update" modal-title="ویرایش" ismodal="true" class="btn btn-lg btn-warning data-role-table-btn" data-toggle="tooltip" title="ویرایش" data-role="confirm">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>&nbsp;&nbsp;
            ویرایش
        </button>

        <button data-role-href="/NewsGroup/ManageNewsGroup/Delete" class="btn btn-lg btn-danger data-role-table-btn" data-toggle="tooltip" title="حذف" data-role="confirm">
            <i class="fa fa-trash-o btn-icon" aria-hidden="true"></i>&nbsp;&nbsp;
            حذف
        </button>
    </span>


</div>


<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">

    <table class="table table-responsive table-striped rounded table-hover table-bordered ">
        <thead>
            <tr>
                <th width="3%"></th>
                <th width="8%">
                    ردیف
                </th>
                <th>عنوان</th>
                
            </tr>
        </thead>
        <tbody>
            <tr>
                <form method="post">
                    <td>---</td>
                    <td>
                        ---
                        @*<input type="text" value="@ViewBag.SearchModel.Id" name="Id" class="form-control searchInput" />*@
                    </td>
                    <td><input type="text" value="@ViewBag.SearchModel.Title" name="Title" class="form-control searchInput" /></td>
                    <input type="submit" class="hidden searchBtn" value="جستجو" />
                </form>
            </tr>


            @{var index = 1;}
            @if (Model != null)
            {

                @foreach (NewsGroupDTO item in Model)
                {
                    <tr>
                        <td><input type="checkbox" data-role-table-checkbox="@item.Id"></td>
                        <th>@(index++)</th>
                        <td>@item.Title</td>
                        
                    </tr>
                }
            }
        </tbody>
    </table>

    @Html.Partial("~/Views/Shared/_Pagination.cshtml")


</div>



