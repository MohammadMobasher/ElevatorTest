@using DataLayer.DTO;
@model List<NewsGroupDTO>
@{
    ViewData["Title"] = "لیست دسته‌بندی اخبار‌ ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">


    
    <TableBotton area="NewsGroup" controller="ManageNewsGroup" action="Insert"
                 isModal="true"
                 modalTitle="ثبت جدید"
                 title="ثبت"
                 icon="fa-plus"
                 buttonClass="btn-primary"></TableBotton>


    <span class="hidden" data-role-table-btn-area-access="">

        <TableBotton area="NewsGroup" controller="ManageNewsGroup" action="Update"
                     isModal="true"
                     modalTitle="ویرایش آیتم"
                     title="ویرایش"
                     icon="fa-pencil-square-o"
                     buttonClass="btn-warning"></TableBotton>


        <TableBotton area="NewsGroup" controller="ManageNewsGroup" action="Delete"
                     title="حذف"
                     icon="fa-trash-o"
                     buttonClass="btn-danger"></TableBotton>
    </span>


</div>


<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">

    <table class="table table-responsive table-striped rounded table-hover table-bordered ">
        <thead>
            <tr>
                <th width="3%"></th>
                <th width="8%">
                    ردیف
                </th>
                <th>عنوان</th>
                
            </tr>
        </thead>
        <tbody>
            <tr>
                <form method="post">
                    <td>---</td>
                    <td>
                        ---
                        @*<input type="text" value="@ViewBag.SearchModel.Id" name="Id" class="form-control searchInput" />*@
                    </td>
                    <td><input type="text" value="@ViewBag.SearchModel.Title" name="Title" class="form-control searchInput" /></td>
                    <input type="submit" class="hidden searchBtn" value="جستجو" />
                </form>
            </tr>


            @{var index = 1;}
            @if (Model != null)
            {

                @foreach (NewsGroupDTO item in Model)
                {
                    <tr>
                        <td><input type="checkbox" data-role-table-checkbox="@item.Id"></td>
                        <th>@(index++)</th>
                        <td>@item.Title</td>
                        
                    </tr>
                }
            }
        </tbody>
    </table>

    @Html.Partial("~/Views/Shared/_Pagination.cshtml")


</div>



