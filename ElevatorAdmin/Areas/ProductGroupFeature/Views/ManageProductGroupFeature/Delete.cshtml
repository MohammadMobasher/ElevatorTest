@using DataLayer.DTO
@model DeleteDTO

@{
    Layout = null;
}


<form action="/ProductGroupFeature/ManageProductGroupFeature/Delete" class="form-horizontal" method="post" style="">

    <input type="hidden" value="@Model.Id" name="Id" />
    <input type="hidden" value="@ViewBag.GroupId" name="GroupId" />

    <div class="alert alert-warning" role="alert">

        <ul>
            <li>تعداد گروه‌هایی که این ویژگی را دارند : @ViewBag.GroupNumHasFeature</li>
            <li>تعداد محصولاتی‌ که این ویژگی را دارند : @ViewBag.ProductNumHasFeatuer</li>
        </ul>

        <p class="" style="color:#000 !important">آیا از حذف اطمینان دارید؟</p>
        <hr>
        <p class="mb-0">

            <button type="submit" class="btn btn-block btn-danger">بلی</button>
            <button type="button" class="btn btn-block btn-success">خیر</button>
            
        </p>
    </div>



</form>