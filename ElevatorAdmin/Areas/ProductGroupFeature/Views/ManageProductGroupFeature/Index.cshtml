@using DataLayer.Entities
@model List<DataLayer.DTO.ProductGroupFeature.ProductGroupFeatureDTO>
@{

    ProductGroup ProductGroup = ViewBag.ProductGroup;

    ViewData["Title"] = "گروه " + ProductGroup.Title;

}




<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 btn-table">



    <TableBotton area="ProductGroupFeature" controller="ManageProductGroupFeature" action="Insert"
                 querystring="ProductGroupId=@ProductGroup.Id"
                 isModal="true"
                 modalTitle="ثبت جدید"
                 title="ثبت"
                 icon="fa-plus"
                 buttonClass="btn-primary"></TableBotton>

    <span class="hidden" data-role-table-btn-area-access="">

        <TableBotton area="ProductGroupFeature" controller="ManageProductGroupFeature" action="Delete"
                     title="حذف"
                     isModal="true"
                     querystring="GroupId=@ProductGroup.Id"
                     modalTitle="حذف آیتم"
                     icon="fa-trash-o"
                     buttonClass="btn-danger"></TableBotton>


        @*@*

            <TableBotton area="ProductGroup" controller="ManageProductGroup" action="Update"
                         isModal="true"
                         modalTitle="ویرایش آیتم"
                         title="ویرایش"
                         icon="fa-pencil-square-o"
                         buttonClass="btn-warning"></TableBotton>





            <TableBotton area="ProductGroupFeature" controller="ManageProductGroupFeature" action="Index"
                         title="ثبت ویژگی"
                         icon="fa-cogs"
                         buttonClass="btn-success"></TableBotton>*@

    </span>
</div>



<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
    <div class="editable-responsive">
        <table class="table-first table-condensed table table-responsive tableWrap table-striped rounded table-hover table-bordered ">
            <thead>
                <tr>
                    <th width="3%"></th>
                    <th width="8%">
                        ردیف
                    </th>
                    <th>عنوان</th>
                    @*<th width="10%">اقدامات</th>*@
                </tr>
                <tr>
                    <form method="post">
                        <th>
                            ---
                            @*<input  type="checkbox" data-toggle="tooltip" title="انتخاب همه" data-role="confirm">*@

                        </th>
                        <th>
                            ---
                            @*<input type="text" value="@ViewBag.SearchModel.Id" name="Id" class="form-control searchInput" />*@
                        </th>
                        <th><input type="text" value="@ViewBag.SearchModel.FeatureTitle" name="FeatureTitle" class="form-control searchInput" /></th>
                        @*<td></td>*@
                        <input type="submit" class="form-control hidden btn btn-success btn-block searchBtn" value="جستجو" />
                    </form>
                </tr>
            </thead>

        </table>
        <div class="bodycontainer scrollable ">
            <table class="table-second table table-hover table-striped table-condensed table-bordered table-scrollable">

                <tbody>



                    @{var index = 1;}
                    @if (Model != null)
                    {

                        @foreach (DataLayer.DTO.ProductGroupFeature.ProductGroupFeatureDTO item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" data-role-table-checkbox="@item.Id"></td>
                                <td>@(index++)</td>
                                <td>@item.FeatureTitle</td>
                                @*<td>
                                        <a data-toggle="tooltip" title="ویرایش" href="/ProductGroup/ManageProductGroup/Update/@item.Id" data-role="confirm">
                                            <i class="fa fa-pencil-square-o text-yellow pe-1x" aria-hidden="true"></i>
                                        </a>

                                        <a data-toggle="tooltip" title="حذف" href="/ProductGroup/ManageProductGroup/Delete/@item.Id" data-role="confirm">
                                            <i class="fa fa-trash-o text-danger pe-1x" aria-hidden="true"></i>
                                        </a>
                                    </td>*@
                            </tr>
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-danger">رکوردی یافت نشد</td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>


        <table class="table table-hover table-striped">
            <tfoot>
                @Html.Partial("~/Views/Shared/_Pagination.cshtml")
            </tfoot>
        </table>

    </div>

</div>




