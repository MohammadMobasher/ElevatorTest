@model  int
@{
    ViewData["Title"] = "ثبت اسلایدشو جدید";
    Layout = null;
}




<form action="/Tree/ManageTree/Update" class="form-horizontal" method="post" >

    <input type="hidden" name="Id" value="@Model" />
    <input type="hidden" name="IsPlanted" value="1" />



    <div class="form-group">
        <label for="TreeNumber" class="control-label col-sm-2">شماره درخت <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" required="required" name="TreeNumber" aria-describedby="TreeNumber" placeholder="شماره درخت" />
        </div>
    </div>


    <div class="form-group">
        <label for="Address" class="control-label col-sm-2">آدرس <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" required="required" name="Address" aria-describedby="Address" placeholder="آدرس" />
        </div>
    </div>



    <button type="submit" class="btn btn-block btn-success">ثبت</button>

</form>





