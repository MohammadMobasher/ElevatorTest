@using DataLayer.DTO.Transportations.Cars
@model CarsTransportaionsFullDto


@{
    ViewData["Title"] = "ویرایش وسیله نقلیه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" method="post" style="" enctype="multipart/form-data">

    <div class="col-12">
        <div class="container">

            <div class="form-group">
                <label for="Title" class="control-label col-sm-2">نام وسیله نقلیه <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input class="form-control" required="required" asp-for="CarName" aria-describedby="CarName" placeholder="نام وسیله نقلیه" />
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">مدل وسیله نقلیه <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input asp-for="CarModel" class="form-control" placeholder="مدل وسیله نقلیه" aria-describedby="CarModel" required="required" />
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">شماره موتور </label>
                <div class="col-sm-10">
                    <input asp-for="MotorSerial" class="form-control" placeholder="شماره موتور" aria-describedby="MotorSerial" required="required" />
                </div>
            </div>


            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">شماره پلاک </label>
                <div class="col-sm-10">
                    <input asp-for="Plaque" class="form-control" placeholder="شماره پلاک" aria-describedby="Plaque" required="required" />
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">بیشترین وزن قابل تحمل <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <select asp-for="TransportSize" asp-items="@Html.GetEnumSelectList<ProductSizeSSOT>()" required="required" class="form-control form-control-lg">
                        <option>لطفا انتخاب کنید</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">عکس وسیله نقلیه <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input name="Pic"
                           required
                           data-default-file="/@(string.IsNullOrEmpty(Model.Pic) ? "" : Model.Pic.Replace("wwwroot", ""))"
                           type="file" class="dropify"
                           data-show-loader="true"
                           accept="image/gif, image/jpeg, image/png , image/bmp , image/jpg"
                           id="ImageAddress" size="50">

                </div>
            </div>

            <button type="submit" class="btn btn-block btn-success">ثبت</button>
        </div>
    </div>
</form>



