@using DataLayer.DTO.Transportations.Tariff
@model TransportationTariffFullDto


@{
    ViewData["Title"] = "ویرایش وسیله نقلیه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" method="post" style="" enctype="multipart/form-data">

    <div class="col-12">
        <div class="container">

            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">از منطقه <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <select asp-for="TehranAreasFrom" asp-items="@Html.GetEnumSelectList<TehranAreas>()" required="required" class="form-control form-control-lg">
                        <option>لطفا انتخاب کنید</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">تا منطقه <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <select asp-for="TehranAreasTO" asp-items="@Html.GetEnumSelectList<TehranAreas>()" required="required" class="form-control form-control-lg">
                        <option>لطفا انتخاب کنید</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">وسیله نقلیه <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <select asp-for="CarId" required="required" class="form-control form-control-lg">
                        <option>لطفا انتخاب کنید</option>
                        @foreach (var item in ViewBag.Cars as List<IdTitle>)
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">وزن کف <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input asp-for="ProductSizeFrom" required type="number" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">وزن حد <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input asp-for="ProductSizeTo" required type="number" class="form-control" />
                </div>
            </div>


            <div class="form-group">
                <label for="Title" class="control-label col-sm-2">تعرفه <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    @*<input type="number" class="form-control" required="required" name="Price" aria-describedby="Price" placeholder="قیمت کالا" />*@
                    <priceInput name="Tariff" title="تعرفه" required="true" value="@Model.Tariff"></priceInput>
                </div>
            </div>


            <button type="submit" class="btn btn-block btn-success">ثبت</button>
        </div>
    </div>
</form>



