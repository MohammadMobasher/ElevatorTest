@model List<DataLayer.DTO.ProductGroupDTO>

@{
    ViewData["Title"] = "لیست گروه‌های کالا";
}






<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">

    <button data-role-href="/ProductGroup/ManageProductGroup/Insert" modal-title="ثبت جدید" ismodal="true" class="btn btn-lg btn-primary data-role-table-btn" data-toggle="tooltip" title="ثبت" data-role="confirm">
        <i class="fa fa-plus btn-icon" aria-hidden="true"></i>&nbsp;&nbsp;
        ثبت
    </button>

    <span class="hidden" data-role-table-btn-area-access="">

        <button data-role-href="/ProductGroup/ManageProductGroup/" modal-title="ویرایش آیتم" ismodal="true" class="btn btn-lg btn-success data-role-table-btn" data-toggle="tooltip" title="ویرایش" data-role="confirm">
            <i class="fa fa-cogs" aria-hidden="true"></i>&nbsp;&nbsp;
            ویژگی‌ها
        </button>

        <button data-role-href="/ProductGroup/ManageProductGroup/Update" modal-title="ویرایش آیتم" ismodal="true" class="btn btn-lg btn-warning data-role-table-btn" data-toggle="tooltip" title="ویرایش" data-role="confirm">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>&nbsp;&nbsp;
            ویرایش
        </button>

        <button data-role-href="/ProductGroup/ManageProductGroup/Delete" class="btn btn-lg btn-danger data-role-table-btn" data-toggle="tooltip" title="حذف" data-role="confirm">
            <i class="fa fa-trash-o btn-icon" aria-hidden="true"></i>&nbsp;&nbsp;
            حذف
        </button>
    </span>
</div>


<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">

    <table class="table table-responsive table-striped rounded table-hover table-bordered ">
        <thead>
            <tr>
                <th width="3%"></th>
                <th width="8%">
                    ردیف
                </th>
                <th>عنوان</th>
                @*<th width="10%">اقدامات</th>*@
            </tr>
        </thead>
        <tbody>
            <tr>
                <form method="post">
                    <td>
                        ---
                        @*<input  type="checkbox" data-toggle="tooltip" title="انتخاب همه" data-role="confirm">*@

                    </td>
                    <td>
                        ---
                        @*<input type="text" value="@ViewBag.SearchModel.Id" name="Id" class="form-control searchInput" />*@
                    </td>
                    <td><input type="text" value="@ViewBag.SearchModel.Title" name="Title" class="form-control searchInput" /></td>
                    @*<td></td>*@
                    <input type="submit" class="form-control hidden btn btn-success btn-block searchBtn" value="جستجو" />
                </form>
            </tr>


            @{var index = 1;}
            @if (Model != null)
            {

                @foreach (DataLayer.DTO.ProductGroupDTO item in Model)
                {
                    <tr >
                        <td><input type="checkbox" data-role-table-checkbox="@item.Id"></td>
                        <td>@(index++)</td>
                        <td>@item.Title</td>
                        @*<td>
                                <a data-toggle="tooltip" title="ویرایش" href="/ProductGroup/ManageProductGroup/Update/@item.Id" data-role="confirm">
                                    <i class="fa fa-pencil-square-o text-yellow pe-1x" aria-hidden="true"></i>
                                </a>

                                <a data-toggle="tooltip" title="حذف" href="/ProductGroup/ManageProductGroup/Delete/@item.Id" data-role="confirm">
                                    <i class="fa fa-trash-o text-danger pe-1x" aria-hidden="true"></i>
                                </a>
                            </td>*@
                    </tr>
                }
            }
        </tbody>
    </table>

    @Html.Partial("~/Views/Shared/_Pagination.cshtml")


</div>
