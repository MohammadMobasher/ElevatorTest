@using DataLayer.DTO
@model DeleteDTO

@{
    Layout = null;
    int NumProductThatHasThisProductUnit = ViewBag.NumProductByProductUnitId;
}


<form action="/ProductUnit/ManageProductUnit/Delete" class="form-horizontal" method="post" style="">

    <input type="hidden" value="@Model.Id" name="Id" />

    <div class="alert alert-warning" role="alert">

        <p class="" style="color:#000 !important">آیا از حذف اطمینان دارید؟</p>

        @if (NumProductThatHasThisProductUnit > 0)
        {
            <p>تعداد کالاهایی که این واحد را دارند برابر  @NumProductThatHasThisProductUnit است</p>
        }

        <hr>
        <p class="mb-0">

            <button type="submit" class="btn btn-block btn-danger">بلی</button>
            <button type="button" class="btn btn-block btn-success">خیر</button>

        </p>
    </div>



</form>