@using DataLayer.DTO.FAQs

@model List<FaqGroupDTO>


@{
    Layout = null;
}


<form id="frm" action="/FAQ/ManageFAQ/Insert" class="form-horizontal" method="post" style="">

    <div class="form-group">
        <label for="QuestionText" class="control-label col-sm-3">عنوان سوال <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-9">
            <textarea type="text" class="form-control" required="required" name="QuestionText" aria-describedby="QuestionText" placeholder="عنوان سوال"></textarea>
        </div>
    </div>


    <div class="form-group">
        <label for="AnswerText" class="control-label col-sm-3">متن پاسخ <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-9">
            <textarea type="text" class="form-control" required="required" name="AnswerText" aria-describedby="AnswerText" placeholder="متن پاسخ"></textarea>
        </div>
    </div>


    <div class="form-group">
        <label for="Text" class="control-label col-sm-3">دسته بندی خبر <i class="text-danger fa fa-star size-8"></i></label>
        <div class="col-sm-9">
            <select name="FaqGroupId" required="required" class="form-control form-control-lg">
                <option value="">انتخاب نمایید...</option>
                @foreach (FaqGroupDTO item in Model)
                {
                    <option value="@item.Id">@item.Title</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="IsActive" class="control-label col-sm-3">وضعیت</label>
        <div class="col-sm-9">

            <input type="checkbox" name="IsActive" value="false">

        </div>
    </div>




    <button type="submit" class="btn btn-block btn-success" id="sbtForm">ثبت</button>

</form>
