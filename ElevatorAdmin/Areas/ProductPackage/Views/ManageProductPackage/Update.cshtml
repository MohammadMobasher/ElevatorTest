<script>
    @{
        var groupIds = JsonConvert.SerializeObject(selectdGroup.Select(a => a.GroupId).ToList());
    }
    var groupIds = JSON.parse('@Html.Raw(groupIds)');;

    var Id = @(Html.Raw(ViewBag.PackageId));

    function GetAllQuestions() {
        $.post("/FeatureQuestionForPakage/ManageFeatureQuestionForPakage/GetAllQuestionsAnswerd"
            , { groups: groupIds, packageId: Id }, function (result) {
                $("#Descriptor-2").html(result);
                    });
            }

    $(function () {
        $('input[name="groupT"]').on('click', function () {
                var inputs = $('input[name="groupT"]');

                groupIds = [];

            $.each(inputs, function (index, key) {
                    if ($(key).is(':checked')) {
                        var groupId = $(this).attr('data-id');
                        groupIds.push(parseInt(groupId));
                    }
                })

        })

        $('a[href="#Descriptor-2"]').on("click", function () {
                GetAllQuestions();
            })

    })
    $(function () {
        $('#frmSbt').submit(function (e) {
            e.preventDefault();

            $.each(groupIds, function (index, key) {
                $('#frmSbt').append('<input type="hidden" name="groups['+index+']" value="'+key+'" />')
            })

            $('#frmSbt').unbind('submit').submit();
        })
    })

</script>