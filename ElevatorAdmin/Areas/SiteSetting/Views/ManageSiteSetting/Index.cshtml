@using DataLayer.Entities
@{
    ViewData["Title"] = "Index";
}


@model SiteSetting

<form class="form-horizontal" method="post" style="" enctype="multipart/form-data">

    <div class="col-12">
        <div class="container">


            <div class="form-group">
                <label for="TwitterURL" class="control-label col-sm-2">آدرس توییتر <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control"  required="required" name="TwitterURL" aria-describedby="TwitterURL" placeholder="آدرس توییتر" />
                </div>
            </div>

            <div class="form-group">
                <label for="TelegramURL" class="control-label col-sm-2">آدرس تلگرام <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" required="required" name="TelegramURL" aria-describedby="TelegramURL" placeholder="آدرس تلگرام" />
                </div>
            </div>

            <div class="form-group">
                <label for="WhatsAppURL" class="control-label col-sm-2">آدرس واتس‌اپ <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" required="required" name="WhatsAppURL" aria-describedby="WhatsAppURL" placeholder="آدرس واتس‌اپ" />
                </div>
            </div>

            <div class="form-group">
                <label for="InstaURL" class="control-label col-sm-2">آدرس اینستاگرام <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" required="required" name="InstaURL" aria-describedby="InstaURL" placeholder="آدرس اینستاگرام" />
                </div>
            </div>


            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">لوگو سایت <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input name="LogoFile"
                           data-default-file="/@Model.Logo.Replace("wwwroot", "")"
                           type="file" class="dropify"
                           data-show-loader="true"
                           accept="image/gif, image/jpeg, image/png , image/bmp , image/jpg"
                           id="LogoFile" size="50">
                    <input type="hidden" name="Logo" value="@Model.Logo" />
                </div>
            </div>

            <div class="form-group">
                <label for="Text" class="control-label col-sm-2">عکس خبر <i class="text-danger fa fa-star size-8"></i></label>
                <div class="col-sm-10">
                    <input name="TabIconFile"
                           data-default-file="/@Model.TabIcon.Replace("wwwroot", "")"
                           type="file" class="dropify"
                           data-show-loader="true"
                           accept="image/gif, image/jpeg, image/png , image/bmp , image/jpg"
                           id="TabIconFile" size="50">
                    <input type="hidden" name="TabIcon" value="@Model.TabIcon" />
                </div>
            </div>



            <button type="submit" class="btn btn-block btn-success">ثبت</button>



        </div>
    </div>
</form>







