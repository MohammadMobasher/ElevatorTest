<section id="fixedheader">
    <div class="row">
        <div class="col-12">
            <div class="card ">
                <div class="card-header-yellow">
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard body-half-screen">
                        <div class="">
                            <TableBotton controller="RoleManage" action="Create"
                                         title="جدید"
                                         icon="fa-plus"
                                         buttonClass="btn-primary"></TableBotton>

                            <table class="table table-hover table-striped table-valigned text-center">
                                <thead>
                                    <tr>
                                        <th width="50px">
                                            ردیف
                                        </th>
                                        <th>
                                            عنوان نقش
                                        </th>
                                        <th>
                                            نقش
                                        </th>
                                        <th>
                                            اقدامات
                                        </th>
                                    </tr>

                                </thead>
                                <tbody class="">

                                    <tr>
                                        <form method="get" name="searchForm">
                                            <td>---</td>
                                            <td><input type="text" value="@ViewBag.SearchModel.RoleTitle" name="RoleTitle" class="form-control searchInput" /></td>
                                            <td><input type="text" value="@ViewBag.SearchModel.Name" name="Name" class="form-control searchInput" /></td>
                                            <td>---</td>
                                            <input type="submit" class="hidden searchBtn" value="جستجو" />
                                        </form>
                                    </tr>

                                    @{ var raw = 1;}
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(raw++)</td>
                                            <td>@item.RoleTitle</td>
                                            <td>@item.Name</td>
                                            <td>

                                                <TableRowBotton controller="RoleManage" action="Edit" Id="@item.Id"
                                                                title="ویرایش"
                                                                icon="fa fa-pencil-square-o text-warning"></TableRowBotton>


                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @Html.Partial("~/Views/Shared/_Pagination.cshtml")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

