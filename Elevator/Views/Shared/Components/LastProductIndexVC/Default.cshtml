@using DataLayer.DTO.Products
@model List<ProductFullDTO>

@using DNTPersianUtils.Core

<div class="product-slider deal-of-the-day-slider-2 slider-navigation-2 slider-dots">

    @foreach (var item in Model)
    {
        <div class="product-slider-col">
            <article class="hoproduct hoproduct-2">
                <div class="hoproduct-image">

                    <a class="hoproduct-thumb" href="product-details.html">
                        <img class="hoproduct-frontimage" src="http://localhost:49772//@item.IndexPic" alt="@item.Title">
                        <img class="hoproduct-backimage" src="http://localhost:49772//@item.IndexPic" alt="@item.Title">
                    </a>
                    <ul class="hoproduct-actionbox">
                        <li><a href="#"><i class="lnr lnr-cart"></i></a></li>
                        <li><a href="#" class="quickview-trigger"><i class="lnr lnr-eye"></i></a></li>
                        <li><a href="#"><i class="lnr lnr-heart"></i></a></li>
                    </ul>
                    <ul class="hoproduct-flags discountProduct" data-id="@item.Id">
                        <li class="flag-pack">جدید</li>
                        @*<li class="flag-discount">-15%</li>*@
                    </ul>
                </div>
                <div class="hoproduct-countdown countdown" data-countdown="2020/12/12"></div>
                <div class="hoproduct-content">
                    <h5 class="hoproduct-title"><a href="product-details.html">@item.Title</a></h5>
                    <div class="hoproduct-rattingbox">
                        <h6>@item.Visit بازدید</h6>
                        <div class="rattingbox">
                            <span class="active"><i class="ion ion-ios-star"></i></span>
                            <span class="active"><i class="ion ion-ios-star"></i></span>
                            <span class="active"><i class="ion ion-ios-star"></i></span>
                            <span class="active"><i class="ion ion-ios-star"></i></span>
                            <span class="active"><i class="ion ion-ios-star"></i></span>
                        </div>
                    </div>
                    <div class="hoproduct-pricebox ">
                        <div class="pricebox">
                            <del class="oldprice">@item.Price</del>
                            <span class="price DiscountPrice_@item.Id">@item.Price تومان</span>
                        </div>
                        <span class="dicountValue_@item.Id"></span>
                    </div>
                </div>
            </article>
        </div>
    }

    <!--// Single Product -->
    <!-- Single Product -->


</div>

