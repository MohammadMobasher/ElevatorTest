@using DataLayer.DTO.Products
@model List<ProductPackageFullDTO>

@using DNTPersianUtils.Core

@if (Model.Any())
{
<div class="ho-section deal-of-the-day-area bg-white ptb-30">
    <div class="container">
        <div class="section-title">
            <h3>پکیج </h3>
        </div>


        <div class="product-slider deal-of-the-day-slider-2 slider-navigation-2 slider-dots">

            @foreach (var item in Model)
            {
                <div class="product-slider-col">
                    <article class="hoproduct hoproduct-2">
                        <div class="hoproduct-image">

                            <a class="hoproduct-thumb VisitCounter" data-id="@item.Id" href="/Product/PackageDetail/@item.Id">
                                <img asp-append-version="true" class="hoproduct-frontimage" onerror="imgError(this);" src="@(item.IndexPic != null ? ViewBag.Url + "/" + item.IndexPic : "/no-image.jpg")" alt="@item.Title">
                                <img asp-append-version="true" class="hoproduct-backimage" onerror="imgError(this);" src="@(item.IndexPic != null ? ViewBag.Url + "/" + item.IndexPic : "/no-image.jpg")" alt="@item.Title">
                            </a>
                            @*<ul class="hoproduct-actionbox">
                                    <li><a href="#"><i class="lnr lnr-cart"></i></a></li>
                                    <li><a href="#" class="quickview-trigger"><i class="lnr lnr-eye"></i></a></li>
                                    <li><a href="#"><i class="lnr lnr-heart"></i></a></li>
                                </ul>*@
                            <ul class="hoproduct-flags">
                                <li class="flag-pack">جدید</li>
                                @*<li class="flag-discount">-15%</li>*@
                            </ul>
                        </div>
                        @await Component.InvokeAsync("CountDownProductVC", new { id = item.Id })
                        <div class="hoproduct-content">
                            <h5 class="hoproduct-title VisitCounter" data-id="VisitCounter"><a href="/Product/PackageDetail/@item.Id">@item.Title</a></h5>
                            <div class="hoproduct-rattingbox">
                                <h6>@item.Visit بازدید</h6>
                                <div class="rattingbox">
                                </div>
                            </div>
                            <div class="hoproduct-pricebox ">
                                <div class="pricebox">
                                    <del class="oldprice"></del>
                                    <span class="price">@item.PackagePrice تومان</span>
                                </div>
                                <span class=""></span>
                            </div>
                        </div>
                    </article>
                </div>
            }

            <!--// Single Product -->
            <!-- Single Product -->


        </div>
    </div>
</div>

}