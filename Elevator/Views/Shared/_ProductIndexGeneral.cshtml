@using DataLayer.DTO.Products
@model ProductFullDTO


<article class="hoproduct">
    <div class="hoproduct-image">

        <a class="hoproduct-thumb VisitCounter text-center" data-id="@Model.Id" href="/Product/ProductDetail/@Model.Id">
            <img class="hoproduct-frontimage " src="@(Model.IndexPic != null && !string.IsNullOrEmpty(Model.IndexPic) ? "http://staffonly.ir/" + "/" + @Model.IndexPic : "/no-image.jpg")" alt="@Model.Title" style="width:200px; height:200px">
            <img class="hoproduct-backimage" src="@(Model.IndexPic != null && !string.IsNullOrEmpty(Model.IndexPic) ? "http://staffonly.ir/" + "/" + @Model.IndexPic : "/no-image.jpg")" alt="@Model.Title">
        </a>
    </div>

    <div class="hoproduct-content">
        <div class="row">
            <h5 class="hoproduct-title VisitCounter" data-id="@Model.Id"><a href="/Product/ProductDetail/@Model.Id">@Model.Title</a></h5>
        </div>
        <div class="hoproduct-pricebox mt-1">
            <div class="pricebox text-right">
                @*<del class="oldprice olPrice_@Model.Id">@Model.Price</del>*@
                <span class="price">@Model.PriceWithDiscount تومان</span>
            </div>
            <span class=""></span>
        </div>
    </div>
</article>
