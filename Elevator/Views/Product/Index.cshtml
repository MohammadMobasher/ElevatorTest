                            </div>
                        </div>
                    </div>

                    <div class="shop-page-products mt-30">
                        <div class="row no-gutters">

                            @foreach (var item in Model)
                            {
                                <div class="col-lg-4 col-md-4 col-sm-6 col-12">
                                    <!-- Single Product -->
                                    <article class="hoproduct">
                                        <div class="hoproduct-image">
                                            <a class="hoproduct-thumb" href="product-details.html">
                                                <img class="hoproduct-frontimage" src="@ViewBag.Url/@item.IndexPic"
                                                     alt="product image">
                                                <img class="hoproduct-backimage" src="@ViewBag.Url/@item.IndexPic"
                                                     alt="product image">
                                            </a>
                                            <ul class="hoproduct-actionbox">
                                                <li><a href="#"><i class="lnr lnr-cart"></i></a></li>
